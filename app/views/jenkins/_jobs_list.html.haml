- if jobs.empty?
  .nodata= l(:label_no_data)

- else

  .flash-messages

  %table{ class: 'table table-hover' }
    %thead
      %tr
        %th{:colspan => 1}
        %th{:colspan => 3, :style => "text-align:center"}= l(:label_jenkins)
        %th{:colspan => 1}= l(:label_sonarqube)
        %th{:colspan => 1}
      %tr
        %th= l(:label_job_name)
        %th= l(:label_latest_build)
        %th= l(:label_job_history)
        %th= l(:label_job_actions)
        %th
        %th

    %tbody
      - jobs.each do |job|
        = render partial: 'jenkins_jobs/job_solo', locals: { job: job }

  :javascript
    $(document).ready(function() { initModalBoxes(modals); });
